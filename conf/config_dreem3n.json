{
    "name": "Dreem",
    "n_gpu": 1,

    "arch": {
        "type": "DreemModel_nm",
        "args": { 
            
        }
    },
    "data_loader": {
        "type": "DreemDataLoader",
        "args":{
            "data_dir": "data/dreem/train",
            "batch_size": 50,
            "shuffle": false,
            "validation_split": 0.1,
            "num_workers": 8,
            "transform":{"outliers":[14,721,439,943,934,622,149,460,556,220,219,603,519,788,799,191,402],
            "band_filter":[96,104]}
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type":"nll_loss",
        "args":{
            "weight": [1.0,3.0]
        }
    },
    "metrics": ["accuracy","roc_auc","f1","cohen_kappa"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 5,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 3,
        "tensorboard": true
    }
}
